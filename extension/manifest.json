{
    "manifest_version": 3,
    "name": "justABooAway",
    "version": "1.0",
    "description": "A cute Chrome extension that lets long-distance couples send cat or ghost pings to each other.",

    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "justABooAway",
        "default_icons": {
            "16": "extension/assets/icons/ghost_temp.png"
        }
    },

    "icons": {
        "16": "extension/assets/icons/graveyard_icon.png",
        "32": "extension/assets/icons/haunting_icon.png",
        "48": "extension/assets/icons/wand_icon.png", 
        "64": "extension/assets/icons/dressing_room.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "storage",
        "notifications"
    ],

    "host_permissions": [
        "https://*/",
        "http://*/"
    ]
}
